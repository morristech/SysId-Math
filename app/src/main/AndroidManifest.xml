<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rafakob.sysidmath" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="rafakob.sysidmath.GlobalApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rafakob.sysidmath.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rafakob.sysidmath.ProjectPrefsActivity"
            android:label="@string/title_activity_project_prefs" >
        </activity>
        <activity
            android:name="rafakob.sysidmath.PlotsActivity"
            android:label="@string/title_activity_plots" >
        </activity>
    </application>

</manifest>
